---
const contactInfo = {
  name: "Cybermaniac",
  address: {
    street: "72 boulevard Alexandre de Fraissinette",
    city: "42100 Saint-Étienne"
  },
  phone: {
    fixed: "04.87.66.67.33",
    mobile: "06.84.25.25.27"
  },
  email: "cybermaniac42@gmail.com"
};
---
<a href="/contact">
  <div class="bg-GrisFonce2 p-6 rounded-lg shadow-md border-2 border-[#7F44A6] rounded-lg text-white shadow-[0_0_15px_#7F44A6] hover:shadow-[0_0_35px_#7F44A6] transition-shadow duration-300">
    <h2 class="text-2xl font-semibold mb-4">Pour nous contacter :</h2>
    <div class="space-y-4">
      <p class="flex items-center py-2">
        <span class="text-blue-600 text-xl mr-2">🏢</span>
        <span class="font-semibold">{contactInfo.name}</span>
      </p>
      <p class="flex items-center py-2">
        <span class="text-blue-600 text-xl mr-2">📍</span>
        <span class="flex flex-col">
          <span>{contactInfo.address.street}</span>
          <span>{contactInfo.address.city}</span>
        </span>
      </p>
      <p class="flex items-center py-2">
        <span class="text-blue-600 text-xl mr-2">☎️</span>
        <span class="flex flex-col">
          <span>Fixe : {contactInfo.phone.fixed}</span>
          <span>Mobile : {contactInfo.phone.mobile}</span>
        </span>
      </p>
      <p class="flex items-center">
        <span class="text-blue-600 text-xl mr-2">📧</span>
        <a href={`mailto:${contactInfo.email}`} class="text-Violet hover:text-Rose">{contactInfo.email}</a>
      </p>
    </div>
  </div>
</a>